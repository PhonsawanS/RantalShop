          }
          
          .description {
            margin-top: 20px;
            font-size: 0.85em;
            padding: 0 40px;
            font-style: italic;
          }
          .price,
          .pricing-box {
            -webkit-transition: all ease-out 0.2s;
            transition: all ease-out 0.2s;
          }
          .price {
            background: rgb(168, 168, 168);
            color: #000000;
            font-size: 2em;
            font-weight: 600;
            position: relative;
            padding: 20px 10px;
            display: block;
          }
          .pricing-box:nth-child(2) .price {
            background: #216f99;
          }
          .pricing-box:nth-child(3) .price {
            background: gray;
          }
          .pricing-box:hover .price {
            background: #0280ff;
            box-shadow: inset 0 0 100px 0 rgba(0, 0, 0, 0.3);
            color: #ffffff;
          }
          .btn {
            background: rgb(168, 168, 168);
            border: 1px solid #000000;
            color: #000;
            -webkit-transition: all ease-out 0.2s;
            transition: all ease-out 0.2s;
            border-radius: 30px;
            padding: 7px 40px;
            display: inline-block;
            margin-top: 20px;
          }
          .btn:hover {
            background: #0280ff;
            border: 1px solid #feffff;
            color: #fff !important;
          }
          .pricing-table-divider {
            display: block;
            height: 1px;
            background: rgba(0, 0, 0, 0.08);
            max-width: 80%;
            margin: 20px auto 0;
          }
          .pricing-table {
            border-radius: 3px;
            display: -ms-grid;
            display: grid;
            -ms-grid-columns: (1fr)3;
            grid-template-columns: repeat(3, 1fr);
            grid-column-gap: 20px;
            grid-row-gap: 20px;
            text-align: center;
          }
          
          .pricing-box {
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.13);
            border: 2px solid rgba(10, 123, 183, 0.14);
          }
          .pricing-box:hover {
            -webkit-transform: scale(1.01);
            transform: scale(1.01);
          }
          .pricing-table ul li {
            padding: 3px 0;
            font-size: 0.95em;
          }
          .pricing-table ul {
            color: #000;
            padding: 15px 60px;
            text-align: left;
          }
          @media (max-width: 750px) {
            .pricing-table {
              -ms-grid-columns: 1fr;
              grid-template-columns: 1fr;
            }
            .pricing-table > div:nth-child(3) {

              grid-row-start: 1;
            }
            .pricing-table > div:nth-child(2) {

              grid-row-start: 2;
            }
            .pricing-table > div {
              -ms-flex-item-align: top;
              -ms-grid-row-align: top;
              align-self: top;
            }
          }
          .pricing-table{
            margin-left:400px;
            width: 100%;
          }  

          button{
            color: #feffff;
            background-color:gray ;
            border: none;
            border-radius: 20px;
            display: flex;
            flex: 1;
            margin-top: 10px;
            margin-left: 150px;
          }

          input{
            border-radius: 50px;
          }
    </style>
</head>
